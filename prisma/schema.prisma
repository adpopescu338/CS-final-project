// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String
  password      String // hashed password
  otp           String?        @unique
  emailVerified Boolean        @default(false)
  createdAt     DateTime       @default(now())
  databases     Database[]
  refreshTokens RefreshToken[]
}

model Database {
  id                     String          @id @default(uuid())
  type                   DBMS
  name                   String
  createdAt              DateTime        @default(now())
  user                   User            @relation(fields: [userId], references: [id])
  userId                 String
  size                   Int             @default(0)
  pod                    Pod             @relation(fields: [podId], references: [id])
  podId                  String
  scheduledEmail         ScheduledEmail?
  encryptedPassword      String
  encryptedConnectionUrl String
  encryptedUsername      String
  status                 DatabaseStatus  @default(Deploying)

  @@unique([name, podId])
}

enum DatabaseStatus {
  Deploying
  Active
  Stopped
  Deleted
}

model Pod {
  id              String           @id @default(uuid())
  deploymentName  String           @unique
  serviceName     String           @unique
  pvcName         String           @unique
  createdAt       DateTime         @default(now())
  databases       Database[]
  publicIp        String? // Not available straight away
  internalAddress String
  scheduledEmails ScheduledEmail[]
}

model ScheduledEmail {
  id         String   @id @default(uuid())
  to         String
  database   Database @relation(fields: [databaseId], references: [id])
  databaseId String   @unique

  pod   Pod    @relation(fields: [podId], references: [id])
  podId String
}

enum DBMS {
  mongodb
  mysql
  postgresql
}

model RefreshToken {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
